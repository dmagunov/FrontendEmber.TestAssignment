<div class="name">
  {{#if isEdit}}
    {{input value=this.song.name}}
  {{else}}
    {{this.song.name}}
  {{/if}}
</div>
<div class="duration">
  {{#if isEdit}}
    {{input value=this.song.duration}}
  {{else}}
    {{format-time this.song.duration}}
  {{/if}}
</div>
<div class="actions">
  {{#if isEdit}}
    <button onClick={{pipe-action (action this.onSave this.song) (action "toggleEdit")}}>Save</button>
    <a href="javascript:void(0)" {{action "toggleEdit"}}>Cancel</a>
  {{else}}
    <a href="javascript:void(0)" {{action "toggleEdit"}}>Edit</a>
  {{/if}}
</div>